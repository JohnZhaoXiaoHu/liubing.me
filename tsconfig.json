{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "isolatedModules": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "jsx": "preserve",
    "allowJs": true,
    "checkJs": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@websites/*": ["src/.vuepress/public/assets/websites/*"],
      "@theme-hope/*": ["node_modules/vuepress-theme-hope/lib/client/*.d.ts"],
      "vuepress-plugin-blog2/*": ["node_modules/vuepress-plugin-blog2/lib/*"]
    },
    "lib": ["ESNext", "DOM"],
    "types": ["vite/client"]
  },
  "include": ["env.d.ts", "src/.vuepress/**/*"],
  "exclude": [
    "node_modules",
    "src/.vuepress/.cache",
    "src/.vuepress/.temp",
    "src/.vuepress/dist"
  ]
}
